# Environment
ENVIRONMENT=development

# API
API_V1_PREFIX=/api/v1
PROJECT_NAME=Wumbo API
DEBUG=true

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/wumbo
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=0

# Redis
REDIS_URL=redis://localhost:6379/0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# AWS
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# S3
S3_BUCKET_NAME=wumbo-uploads
S3_BUCKET_REGION=us-east-1

# SES (Email)
SES_SENDER_EMAIL=noreply@familybudget.app
SES_SENDER_NAME=Wumbo

# SNS (Push Notifications)
SNS_PLATFORM_APPLICATION_ARN=

# Plaid
PLAID_CLIENT_ID=
PLAID_SECRET=
PLAID_ENVIRONMENT=sandbox
PLAID_PRODUCTS=transactions
PLAID_COUNTRY_CODES=US

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8081"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO
