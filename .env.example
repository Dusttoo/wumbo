# Environment Configuration Template
# Copy this file to .env.local and fill in your values
# Never commit .env.local or any file containing real secrets

# Environment
NODE_ENV=development

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000

# Database (for backend/worker - will be in Secrets Manager in production)
DATABASE_URL=postgresql://user:password@localhost:5432/family_budget_dev

# Redis (for backend/worker)
REDIS_URL=redis://localhost:6379

# Plaid (get from https://dashboard.plaid.com)
PLAID_CLIENT_ID=your_plaid_client_id
PLAID_SECRET=your_plaid_secret
PLAID_ENVIRONMENT=sandbox

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# AWS (for local development)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret

# Expo (for mobile development)
EXPO_PUBLIC_API_URL=http://localhost:8000

# Sentry (optional, for error tracking)
# NEXT_PUBLIC_SENTRY_DSN=
# SENTRY_DSN=
