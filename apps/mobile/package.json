{
  "name": "@wumbo/mobile",
  "version": "0.1.0",
  "private": true,
  "description": "React Native mobile application for Wumbo",
  "main": "expo-router",
  "scripts": {
    "dev": "expo start",
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "build": "tsc",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:ci": "jest --ci --coverage",
    "clean": "rm -rf .expo .expo-shared"
  },
  "dependencies": {
    "@wumbo/types": "*",
    "@wumbo/ui": "*",
    "eas": "^0.1.0",
    "expo": "~54.0.30",
    "expo-dev-client": "~6.0.20",
    "expo-router": "~6.0.0",
    "expo-status-bar": "~3.0.9",
    "react": "19.1.0",
    "react-native": "0.81.5",
    "react-native-safe-area-context": "^5.4.0",
    "react-native-screens": "^4.3.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@babel/core": "^7.23.5",
    "@types/react": "~19.1.0",
    "@wumbo/config": "*",
    "eslint": "^9",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-native": "^4.1.0",
    "typescript": "~5.9.2"
  }
